{
  "compilerOptions": {
    /* Basic Options */
    "target": "es2016",                   // Specify ECMAScript target version
    "module": "commonjs",                 // Specify module code generation method
    // "rootDir": "./src",                   // Specify the root directory of input files
    "outDir": "./dist",                   // Specify the output directory for compiled files
    "strict": true,                       // Enable all strict type-checking options
    "esModuleInterop": true,              // Enable compatibility with CommonJS
    "skipLibCheck": true,                 // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,  // Ensure consistent casing in file names

    /* JavaScript Support */
    "allowJs": true,                      // Allow JavaScript files to be a part of your program
    "checkJs": false,                     // Disable type checking in JavaScript files

    /* Module Resolution Options */
    "moduleResolution": "node",           // Use Node module resolution strategy
    "resolveJsonModule": true             // Allow importing .json files
  },
  "include": ["./*"],                // Include all .ts and .js files in src folder
  "exclude": ["node_modules", "**/*.spec.ts"]  // Exclude node_modules and test files
}
